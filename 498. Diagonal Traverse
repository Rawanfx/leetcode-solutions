public class Solution {
    public int[] FindDiagonalOrder(int[][] mat) {
        int n= mat.Length;
        int m = mat[0].Length;
        Console.WriteLine(n+" "+m);
        bool flag =false;
       List<int>res=new List<int>();
       for (int i=0;i<m;i++){
           List<int>temp=new List<int>();
           int x=0;
           int y=i;
           while (x>=0 && x<n && y>=0 && y<m){
               temp.Add(mat[x][y]);
               x+=1;
               y-=1;
           }
           if(flag==false){
               temp.Reverse();
               flag=true;
           }
           else{
               flag=false;
           }
           res.AddRange(temp);
       }
        for (int i=1;i<n;i++){
            List<int>temp=new List<int>();
            int x =i;
            int y=m-1;
            while (x>=0 && x<n && y>=0 && y<m){
               temp.Add(mat[x][y]);
               x+=1;
               y-=1;
           }
           if(flag==false){
               temp.Reverse();
               flag=true;
           }
           else{
               flag=false;
           }
           res.AddRange(temp);
        }
        return res.ToArray();
    }
}
