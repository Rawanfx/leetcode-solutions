public class Solution {
    public int LongestPalindrome(string s) {
        Dictionary<char,int>dic=new Dictionary<char,int>();
       
        int ct=0;
        bool flag=false;
        for (int i=0;i<s.Count();i++){
            if (dic.ContainsKey(s[i])){
                dic[s[i]]++;
            }
            else dic[s[i]]=1;
        }
        foreach (var i in dic){
            if (i.Value%2==0){
                ct+=i.Value;
            }
            else{
                ct+=i.Value-1;
                flag=true;
            }
        }
        if (flag)
        ct++;
        return ct;
    }
}
